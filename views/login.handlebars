/* Form CSS*/

form{
    padding: 15px;
}

label{
    display: block;
    margin-top: 10px;
}

input,textarea{
    display:block;
    margin: 10px 0;
    font-size: 1.2em;
    outline: 0;
    background-color: #aacce9;
    border: 3px solid #4e5d6a;
    width: 50%;
    padding: 5px;
}

input:focus, textarea:focus{
    transition: .5s ease-in-out;
    -webkit-transform: scale(1.05);
    border-color: #aacce9;
    background-color: #fff;
}

button{
    font-size: 1em;
    padding: 10px;
    background-color: #aacce9;
    color: #fff;
    border: 1px solid #4e5d6a;
    border-radius: 5px;
    box-shadow: 0 3px 0 0 #4e5d6a;
    outline: 0;
    box-shadow: 0;
    display: block;
}

button:hover{
    transition: .75s ease-in-out;
    background-color: #90adc6;
}



